<launch>
  <!-- TurtleBot3 Core -->
  <arg name="port" default="/dev/ttyUSB0"/>
  <node pkg="rosserial_python" type="serial_node.py" name="turtlebot3_core" output="screen">
    <param name="port" value="$(arg port)"/>
    <param name="baud" value="115200"/>
  </node>

  <!-- TurtleBot3 LDS -->
  <arg name="port_lds" default="/dev/ttyUSB0"/>
  <node name="turtlebot3_lds" pkg="hls_lfcd_lds_driver" type="hlds_laser_publisher" output="screen">
    <param name="port" value="$(arg port_lds)"/>
  </node>

  <!-- TurtleBot3 Diagnostics -->
  <node name="turtlebot3_diagnostics" pkg="turtlebot3_bringup" type="turtlebot3_diagnostics" output="screen"/>
</launch>

